{
  "swagger": "2.0",
  "info": {
    "version": "2",
    "title": "Banka Application API Endpoints"
  },
  "host": "ch-iii.herokuapp.com",
  "basePath": "/",
  "securityDefinitions": {
    "Headers": {
      "type": "apiKey",
      "name": "token",
      "in": "header"
    }
  },
  "schemes": [
    "https",
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "definitions": {
    "signup": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "phoneNo": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "signin": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "account": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        }
      }
    },
    "accountstatus": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        }
      }
    },
    "transaction": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        }
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        }
      }
    }
  },
  "paths": {
    "/api/v2/auth/signup": {
      "post": {
        "tags": [
          "User Sign up"
        ],
        "description": "Sign up",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "creating user account",
            "schema": {
              "$ref": "#/definitions/signup"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "successful signed up",
            "schema": {
              "$ref": "#/definitions/signup"
            }
          }
        }
      }
    },
    "/api/v2/auth/signin": {
      "post": {
        "tags": [
          "User Sign in"
        ],
        "description": "user sign in",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "user credentials",
            "schema": {
              "$ref": "#/definitions/signin"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "signed in",
            "schema": {
              "$ref": "#/definitions/signin"
            }
          }
        }
      }
    },
    "/api/v2/accounts": {
      "post": {
        "tags": [
          "Accounts"
        ],
        "description": "Create a bank account",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "Token",
            "required": true
          },
          {
            "name": "account type",
            "in": "body",
            "description": "Bank Account type(current or savings)",
            "schema": {
              "$ref": "#/definitions/account"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "account created",
            "schema": {
              "$ref": "#/definitions/account"
            }
          }
        }
      }
    },
    "/api/v2/account/{accountNo}/": {
      "patch": {
        "tags": [
          "Accounts"
        ],
        "description": "Change account status",
        "parameters": [
          {
            "name": "accountNo",
            "in": "path",
            "description": "account Number",
            "required": true
          },
          {
            "name": "token",
            "in": "body",
            "description": "Admin token",
            "required": true
          },
          {
            "name": "account status",
            "in": "body",
            "description": "Bank Account status(active or dormant)",
            "schema": {
              "$ref": "#/definitions/status"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Operation Successful",
            "schema": {
              "$ref": "#/definitions/accountstatus"
            }
          }
        }
      }
    },
    "/api/v2/account/{accountNo}": {
      "delete": {
        "tags": [
          "Accounts"
        ],
        "description": "delete account number",
        "parameters": [
          {
            "name": "accountNo",
            "in": "path",
            "description": "The account number to delete",
            "required": true
          },
          {
            "name": "token",
            "in": "header",
            "description": "The admin/staff token",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Account deleted"
          }
        }
      }
    },
    "/api/v2/transactions/{accountNo}/debit": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "description": "Debit a Bank Acoount",
        "parameters": [
          {
            "name": "accountNo",
            "in": "path",
            "description": "The account number to debit",
            "required": true
          },
          {
            "name": "token",
            "in": "header",
            "description": "The cashier token",
            "required": true
          },
          {
            "name": "Amount",
            "in": "body",
            "description": "The amount of money to debit",
            "schema": {
              "$ref": "#/definitions/transaction"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Transaction sucessful",
            "schema": {
              "$ref": "#/definitions/transaction"
            }
          }
        }
      }
    },
    "/api/v2/transactions/{accountNo}/credit": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "description": "Credit a Bank Acoount",
        "parameters": [
          {
            "name": "accountNo",
            "in": "path",
            "description": "The account number to credit",
            "required": true
          },
          {
            "name": "token",
            "in": "header",
            "description": "The cashier token",
            "required": true
          },
          {
            "name": "Amount",
            "in": "body",
            "description": "The amount of money to credit",
            "schema": {
              "$ref": "#/definitions/transaction"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Transaction sucessful",
            "schema": {
              "$ref": "#/definitions/transaction"
            }
          }
        }
      }
    },
    "/api/v2/accounts/{accountNo}/transactions": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "description": "list all accountâ€™s transaction history",
        "parameters": [
          {
            "name": "accountNo",
            "in": "path",
            "description": "Transaction for this account",
            "required": true,
            "type": "string"
          },
          {
            "name": "token",
            "in": "header",
            "description": "The client/staff token",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {}
        }
      }
    },
    "/api/v2/transactions/{transactionId}": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "description": "View a specific transaction",
        "parameters": [
          {
            "name": "transactionId",
            "in": "path",
            "description": "View specific transaction history",
            "required": true
          },
          {
            "name": "token",
            "in": "header",
            "description": "The client/staff token",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {}
        }
      }
    },
    "/api/v2/user/{email}/accounts": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "description": "View all accounts owned by a specific user",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "The email address of the client",
            "required": true
          },
          {
            "name": "token",
            "in": "header",
            "description": "The admin token",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "{email} Bank accounts"
          }
        }
      }
    },
    "/api/v2/accounts/{accountNo}": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "description": "View all accounts owned by a specific user",
        "parameters": [
          {
            "name": "accountNo",
            "in": "path",
            "description": "The Bank account to view",
            "required": true
          },
          {
            "name": "token",
            "in": "header",
            "description": "The client token",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {}
        }
      }
    },
    "/api/v2/accounts/": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "description": "View all Bank accounts",
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "description": "The admin token",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "The list of all Bank accounts"
          }
        }
      }
    },
    "/api/v2/account/?status=active": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "description": "list accounts",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "status",
            "required": true
          },
          {
            "name": "token",
            "in": "header",
            "description": "Staff token",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "{status} all Bank accounts"
          }
        }
      }
    }
  }
}